<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AFC</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/customCss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <aside id="sticky-social" class="socialContainer hidden-xs">
        <ul>
            <li><a href="http://www.facebook.com/agents4changecr" class="entypo-facebook" target="_blank"><span>Facebook</span></a></li>
            <li><a href="http://www.twitter.com/agents4changecr" class="entypo-twitter" target="_blank"><span>Twitter</span></a></li>
            <li><a href="http://www.youtube.com/user/agents4changecr" class="entypo-play" target="_blank"><span>Youtube</span></a></li>
            <li><a href="http://www.instagram.com/agents4changecr" class="entypo-instagrem" target="_blank"><span>Instagram</span></a></li>
        </ul>
    </aside>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="pull-left">
                <img src="~/Content/Images/smallLogo.png" class="img-responsive afc-header-logo" width="120" />
            </a>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")">@Html.ActionLink("Our Agents", "About", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Impact" ? "active" : "")">@Html.ActionLink("Impact", "Impact", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "FAQ" ? "active" : "")">@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Testimonial" ? "active" : "")">@Html.ActionLink("Testimonials", "Testimonial", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>

        </div>
        <span id="afc-fixed-email" class="hidden-xs">contact@agentsforchangecr.com</span>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <a href="http://www.falveygroup.com/" target="_blank">
            <img src="~/Content/Images/falvey-group-logo.png" class="img-responsive afc-falvey-logo" />
        </a>
        <p class="afc-copyright">&copy; @DateTime.Now.Year - Agents For Change</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</html>
